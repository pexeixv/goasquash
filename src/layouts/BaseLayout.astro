---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props{
    title: string;
}

const {title} = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en"  data-theme="night" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="shortcut icon" href="//gavn.in/fav" type="image/x-icon">
</head>
<body class="flex flex-col min-h-screen bg-slate-900 text-slate-50  scrollbar-thumb-gray-700 scrollbar-track-gray-900 scrollbar-thin scrollbar-thumb-rounded-full scrollbar-corner-rounded-full scrollbar-track-rounded-full" >
    <!-- <Header/> -->
    <main class="flex-1">
        <slot/>
    </main>
    <Footer/>
</body>
</html>